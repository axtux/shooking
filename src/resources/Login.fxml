                                <Label fx:id="printLabel" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                           <font>
                              <Font size="22.0" />
                           </font></Label>
                                <Button fx:id="btnOk" mnemonicParsing="false" onAction="#submit" text="Submit" />
                        <ImageView fitHeight="136.0" fitWidth="186.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@pictures/welcome.png" />
                           </image>
                        </ImageView>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </center>
        </BorderPane>
    </children>
