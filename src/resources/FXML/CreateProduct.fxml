<GridPane alignment="CENTER_LEFT" hgap="20.0" minHeight="200.0" minWidth="400.0" prefHeight="222.0" prefWidth="444.0"
          vgap="20.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="be.ac.ulb.infof307.g10.controllers.CreateProductController">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="100.0" prefWidth="200.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
    </rowConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label text="Name"/>
    <TextField fx:id="name" prefHeight="27.0" prefWidth="150.0" promptText="Banana" GridPane.columnIndex="1"/>
    <Label text="Size" GridPane.rowIndex="1"/>
    <Label text="Unit" GridPane.rowIndex="2"/>
    <IntField fx:id="size" prefHeight="27.0" prefWidth="150.0" promptText="42" GridPane.columnIndex="1"
              GridPane.rowIndex="1"/>
    <TextField fx:id="unit" prefHeight="27.0" prefWidth="150.0" promptText="g" GridPane.columnIndex="1"
               GridPane.rowIndex="2"/>
    <Label fx:id="printLabel" maxHeight="1.7976931348623157E308" GridPane.columnSpan="2" GridPane.halignment="CENTER"
           GridPane.rowIndex="3">
        <font>
          <Font size="14.0"/>
        </font>
    </Label>
    <Button fx:id="button" defaultButton="true" mnemonicParsing="false" onAction="#create" text="Create"
            GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4"/>
</GridPane>
